<p id="notice"><%= notice %></p>

<h1>Listing Controllers</h1>
<%= form_tag listings_path, :method => :get do %>
<p>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "search", :name => nil %>
</p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Sl no</th>
      <th>Text</th>
      <th>Description</th>
      <th>Dob</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @controllers.each do |controller| %>
      <tr>
        <td><%= controller.sl_no %></td>
        <td><%= controller.text %></td>
        <td><%= controller.description %></td>
        <td><%= controller.dob %></td>
        <td><%= link_to 'Show', controller %></td>
        <td><%= link_to 'Edit', edit_controller_path(controller) %></td>
        <td><%= link_to 'Destroy', controller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Controller', new_controller_path %>
